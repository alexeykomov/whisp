extends base

block cssLinks
  if processed
    each cssFileName in cssFileNames
      link(rel='stylesheet', href=staticDir + '/' + cssFileName)

block jsLinksHead
  if !processed
    script(src='/src/closure-library/closure/goog/base.js')
    script(src='/src/deps.js')

block content
  script.
    var MODULES = !{modules};
    var LANGUAGE_NAMES = !{languageNames};
    var USER = !{user};
  if !processed
    script.
      // Call main method.
      new rflect.cal.Loader().enterDocument();

block jsLinksBody
  if processed
    each jsFileName in jsFileNames
      script(src=staticDir + '/' + jsFileName)
